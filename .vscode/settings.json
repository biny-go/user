{
  "[proto3]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "zxh404.vscode-proto3"
  },
  "protoc": {
    "path": "protoc", // 或绝对路径如 "C:\\path\\to\\protoc.exe"
    "options": [
      "--proto_path=${workspaceFolder}",
      "--proto_path=${workspaceFolder}/../loong/third_party",
      // "--proto_path=${env:GOPATH}\\pkg\\mod\\github.com\\biny-go\\loong@v1.1.1\\third_party",
      "--proto_path=/usr/local/include" // 兼容 Unix 路径（Windows 下可选）
    ]
  }
}